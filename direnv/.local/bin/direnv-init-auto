#!/usr/bin/env bash
# direnv-init-auto - Initialize direnv with automatic .env loading
# Works from any shell (bash/zsh/fish) due to shebang

set -euo pipefail

# shellcheck source=direnv-lib
source "$(dirname "$0")/direnv-lib"

check_direnv
handle_existing_envrc

echo "Creating .envrc with automatic .env loading"
write_envrc '# Automatically load .env files
layout auto'

success ".envrc created"
echo
info "Place your environment variables in .env and they will load automatically"
info "Example: echo 'export MY_VAR=value' > .env"
