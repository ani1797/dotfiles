#!/usr/bin/env bash
# Configure Tmux - install TPM and plugins
# Run after stowing the tmux module to bootstrap plugins

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

print_info() {
    echo -e "${BLUE}i${NC} $1"
}

print_success() {
    echo -e "${GREEN}+${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}!${NC} $1" >&2
}

print_error() {
    echo -e "${RED}x${NC} $1" >&2
}

# Check if tmux is installed
if ! command -v tmux >/dev/null 2>&1; then
    print_error "Tmux is not installed."
    echo "  Arch Linux: sudo pacman -S tmux"
    echo "  Debian/Ubuntu: sudo apt-get install tmux"
    echo "  macOS: brew install tmux"
    exit 1
fi

TMUX_VERSION=$(tmux -V)
print_info "Found: $TMUX_VERSION"

# Warn if tmux version is old (XDG support added in 3.1)
TMUX_MAJOR=$(echo "$TMUX_VERSION" | sed 's/[^0-9.]//g' | cut -d. -f1)
TMUX_MINOR=$(echo "$TMUX_VERSION" | sed 's/[^0-9.]//g' | cut -d. -f2)
if [[ "$TMUX_MAJOR" -lt 3 ]] || { [[ "$TMUX_MAJOR" -eq 3 ]] && [[ "$TMUX_MINOR" -lt 1 ]]; }; then
    print_warning "Tmux $TMUX_VERSION detected. XDG config support requires 3.1+"
    print_warning "You may need to symlink: ln -s ~/.config/tmux/tmux.conf ~/.tmux.conf"
fi

# Check config exists
if [[ ! -f "$HOME/.config/tmux/tmux.conf" ]]; then
    print_error "Tmux config not found at ~/.config/tmux/tmux.conf"
    print_info "Run 'stow tmux' from the dotfiles directory first."
    exit 1
fi

# Install TPM
TPM_DIR="$HOME/.tmux/plugins/tpm"
if [[ -d "$TPM_DIR" ]]; then
    print_info "TPM already installed, updating..."
    git -C "$TPM_DIR" pull --quiet
    print_success "TPM updated"
else
    print_info "Installing TPM (Tmux Plugin Manager)..."
    git clone --depth=1 https://github.com/tmux-plugins/tpm "$TPM_DIR"
    print_success "TPM installed"
fi

# Install plugins non-interactively
print_info "Installing tmux plugins..."
if "$TPM_DIR/bin/install_plugins" >/dev/null 2>&1; then
    print_success "Plugins installed successfully"
else
    print_warning "Plugin installation completed with warnings"
fi

echo ""
print_success "Tmux configuration complete!"
echo ""
print_info "Keybinding reference:"
echo "  Ctrl+Space       Prefix key"
echo "  prefix + \\       Horizontal split"
echo "  prefix + -       Vertical split"
echo "  Alt+Arrow        Navigate panes (no prefix)"
echo "  Ctrl+Alt+Arrow   Navigate windows"
echo "  prefix + r       Reload config"
echo "  prefix + m       Edit config"
echo "  prefix + b       Toggle status bar"
echo "  prefix + k       Kill window (confirm)"
echo "  prefix + K       Kill server (confirm)"
echo "  prefix + End     Kill pane"
echo "  prefix + I       Install plugins (TPM)"
echo "  prefix + U       Update plugins (TPM)"
echo "  prefix + Ctrl+s  Save session (resurrect)"
echo "  prefix + Ctrl+r  Restore session (resurrect)"
echo ""
