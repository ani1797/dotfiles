# Example deps.yaml structure
# Place this file in each module directory to declare dependencies

# Native packages, keyed by distro family
packages:
  arch:
    - git
    - neovim
  debian:
    - git
    - neovim
  fedora:
    - git
    - neovim
  macos:
    - git
    - neovim

# AUR packages (Arch-only, requires paru or yay)
aur:
  - some-aur-package

# Cargo crates (installed via cargo install, skipped if already present)
cargo:
  - yazi-fm
  - ripgrep

# Pip packages (installed with pip install --user)
pip:
  - some-python-tool

# Install scripts with optional idempotency guard
script:
  - run: "curl -sS https://starship.rs/install.sh | sh -s -- --yes"
    provides: starship   # skip if this binary is already on $PATH

# Required binaries that MUST be available before stowing
# These are checked after all installations complete
# If any are missing, the installer will abort before stowing
requires:
  - git
  - nvim
  - starship
